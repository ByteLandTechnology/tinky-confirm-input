{
  "name": "tinky-confirm-input",
  "version": "0.1.0",
  "description": "Confirm input component for tinky CLI apps",
  "keywords": [
    "tinky",
    "react",
    "cli",
    "terminal",
    "confirm",
    "input",
    "prompt"
  ],
  "homepage": "https://github.com/ByteLandTechnology/tinky-confirm-input#readme",
  "bugs": {
    "url": "https://github.com/ByteLandTechnology/tinky-confirm-input/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ByteLandTechnology/tinky-confirm-input.git"
  },
  "license": "MIT",
  "author": {
    "name": "ByteLandTechnology"
  },
  "type": "module",
  "main": "./lib/index.js",
  "scripts": {
    "test": "vitest run --coverage",
    "build": "tsc && bun run docs",
    "lint": "eslint src tests",
    "prepublish": "bun run build",
    "prepare": "husky",
    "docs": "typedoc --plugin typedoc-plugin-markdown --disableSources --out docs/api && prettier --write docs/api"
  },
  "files": [
    "./lib/*"
  ],
  "typings": "./lib/index.d.ts",
  "dependencies": {
    "tinky-theme": "^1.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.0",
    "@commitlint/config-conventional": "^20.3.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.2",
    "@semantic-release/npm": "^13.1.3",
    "@semantic-release/release-notes-generator": "^14.1.0",
    "@vitest/coverage-v8": "4.0.18",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "delay": "^6.0.0",
    "eslint": "^9.39.2",
    "eslint-plugin-react": "^7.37.5",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "semantic-release": "^25.0.2",
    "tinky-test": "^1.0.0",
    "typedoc": "^0.28.16",
    "typedoc-plugin-markdown": "^4.9.0",
    "typescript-eslint": "^8.54.0",
    "vitest": "^4.0.18"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx,json,md,yaml,yml}": "prettier --write"
  }
}
